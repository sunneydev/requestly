{
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Bundler",
    "types": ["@types/bun"],
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "allowJs": true,
    "noEmit": true,
    "outDir": "lib",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/": ["src/index.ts"],
      "@/*": ["src/*"],
      "@/test/*": ["test/*"]
    }
  }
}
